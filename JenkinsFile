pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
        stage('Verify') {
            steps {
                sh 'docker-compose ps'
            }
        }
    }
    post {
        failure {
            sh 'docker-compose logs'
        }
    }
}